pipeline {
    agent any

    stages {
        stage('Checkout Backend') {
            steps {
                git branch: 'master', url: 'https://github.com/jihedsaguer/barber-backend.git'
            }
        }

        stage('Checkout Frontend') {
            steps {
                dir('frontend') {
                    git branch: 'master', url: 'https://github.com/jihedsaguer/barber-frontend.git'
                }
            }
        }

        stage('Build Backend') {
            steps {
                sh 'npm install && npm run build'
            }
        }

        stage('Build Frontend') {
            steps {
                dir('frontend') {
                    sh 'npm install && npm run build'
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying both backend and frontend...'
                // Add your deploy steps here
            }
        }
    }
}
