pipeline {
    agent any

    environment {
        NODE_OPTIONS = "--max-old-space-size=4096"
    }

    stages {
        stage('Checkout Backend') {
            steps {
                echo 'Cloning backend repository...'
                git branch: 'master', url: 'https://github.com/jihedsaguer/barber-backend.git'
            }
        }

        stage('Checkout Frontend') {
            steps {
                echo 'Cloning frontend repository...'
                dir('frontend') {
                    git branch: 'prod', url: 'https://github.com/jihedsaguer/barber-frontend.git'
                }
            }
        }

        stage('Install & Build Backend') {
            steps {
                echo 'Installing and building backend...'
                sh '''
                    cd $WORKSPACE
                    npm ci
                    npm run build
                '''
            }
        }

        stage('Install & Build Frontend') {
            steps {
                echo 'Installing and building frontend...'
                dir('frontend') {
                    sh '''
                        npm ci
                        npm run build
                    '''
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying backend and frontend...'
                // Example: docker compose up -d --build
                // or scp dist files to a remote server, etc.
            }
        }
    }

    post {
        always {
            echo "Cleaning up workspace..."
            cleanWs()
        }
        success {
            echo "✅ Build completed successfully!"
        }
        failure {
            echo "❌ Build failed. Check logs."
        }
    }
}
