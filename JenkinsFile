pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main',
            url: 'https://github.com/jihedsaguer/barber-backend.git',
            credentialsId: 'github-token'
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm install'
      }
    }

    stage('Build Backend') {
      steps {
        sh 'npm run build'
      }
    }

    stage('Deploy') {
      steps {
        sh '''
        pm2 stop backend || true
        pm2 start dist/main.js --name backend
        '''
      }
    }
  }
}
